generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum CalculationMethod {
  MANUAL
  AUTOMATIC
}

enum AssetSource {
  CASH
  SAVINGS
  GOLD
  INVESTMENT
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  passwordHash  String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  categories    Category[]
  transactions  Transaction[]
  zakatSettings ZakatSettings?
  zakatAssets   ZakatAsset[]
  zakatPayments ZakatPayment[]
}

model Category {
  id           String        @id @default(uuid())
  userId       String
  name         String
  type         CategoryType
  isSystem     Boolean       @default(false)
  createdAt    DateTime      @default(now())
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([userId, name, type])
  @@index([userId])
}

model Transaction {
  id              String          @id @default(uuid())
  userId          String
  type            TransactionType
  amount          Decimal         @db.Decimal(12, 2)
  categoryId      String
  description     String?
  transactionDate DateTime
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        Category        @relation(fields: [categoryId], references: [id])

  @@index([userId, transactionDate])
}

model ZakatSettings {
  id                String            @id @default(uuid())
  userId            String            @unique
  nisabAmount       Decimal           @db.Decimal(12, 2)
  zakatRate         Decimal           @db.Decimal(4, 2) @default(2.5)
  calculationMethod CalculationMethod @default(AUTOMATIC)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ZakatAsset {
  id        String      @id @default(uuid())
  userId    String
  source    AssetSource
  amount    Decimal     @db.Decimal(12, 2)
  date      DateTime    @default(now())
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model ZakatPayment {
  id          String   @id @default(uuid())
  userId      String
  amountPaid  Decimal  @db.Decimal(12, 2)
  paymentDate DateTime
  notes       String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, paymentDate])
}
